{
	"name": "@devprotocol/khaos-kit",
	"version": "1.0.1",
	"description": "Khaos SDK for JavaScript",
	"main": "dist/index.js",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"types": "./dist/khaos-kit.d.ts",
	"files": [
		"dist/*.mjs",
		"dist/*.js",
		"dist/*.ts",
		"!**/*.test.*"
	],
	"scripts": {
		"test": "ava",
		"build": "yarn build:ts && yarn build:rollup",
		"build:ts": "tsc",
		"build:rollup": "rollup -c",
		"watch": "tsc -w",
		"pretest": "yarn build:ts",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepack": "yarn test && yarn build"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"bent": "^7.3.12",
		"ramda": "^0.27.1"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@rollup/plugin-multi-entry": "4.0.0",
		"@rollup/plugin-typescript": "8.1.0",
		"@types/bent": "7.3.2",
		"@types/dotenv": "8.2.0",
		"@types/node": "14.14.21",
		"@types/ramda": "0.27.34",
		"@types/sinon": "9.0.10",
		"@typescript-eslint/eslint-plugin": "4.13.0",
		"@typescript-eslint/parser": "4.13.0",
		"ava": "3.15.0",
		"dotenv": "8.2.0",
		"eslint": "7.18.0",
		"eslint-config-prettier": "6.15.0",
		"eslint-plugin-functional": "3.2.1",
		"husky": "4.3.7",
		"prettier": "2.2.1",
		"rimraf": "3.0.2",
		"rollup": "2.36.1",
		"rollup-plugin-dts": "2.0.1",
		"sinon": "9.2.3",
		"typescript": "4.1.3"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"directories": {
		"example": "example"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/khaos-kit-js.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/khaos-kit-js/issues"
	},
	"homepage": "https://github.com/dev-protocol/khaos-kit-js#readme"
}
