{
	"name": "@devprotocol/khaos-kit",
	"version": "1.3.0",
	"description": "Khaos SDK for JavaScript",
	"main": "dist/index.js",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"types": "./dist/khaos-kit.d.ts",
	"files": [
		"dist/*.mjs",
		"dist/*.js",
		"dist/*.ts",
		"!**/*.test.*"
	],
	"scripts": {
		"test": "ava",
		"build": "yarn build:ts && yarn build:rollup",
		"build:ts": "tsc",
		"build:rollup": "rollup -c",
		"watch": "tsc -w",
		"pretest": "yarn build:ts",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepack": "yarn test && yarn build",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@devprotocol/khaos-core": "1.5.1",
		"@devprotocol/khaos-functions": "0.4.1",
		"@ethersproject/contracts": "5.5.0",
		"bent": "^7.3.12",
		"ramda": "^0.27.1",
		"type-fest": "^2.0.0"
	},
	"devDependencies": {
		"@ava/typescript": "2.0.0",
		"@rollup/plugin-multi-entry": "4.1.0",
		"@rollup/plugin-typescript": "8.3.0",
		"@types/bent": "7.3.2",
		"@types/dotenv": "8.2.0",
		"@types/node": "16.11.7",
		"@types/ramda": "0.27.48",
		"@types/sinon": "10.0.6",
		"@typescript-eslint/eslint-plugin": "5.3.1",
		"@typescript-eslint/parser": "5.3.1",
		"ava": "3.15.0",
		"dotenv": "10.0.0",
		"eslint": "7.32.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-functional": "3.7.2",
		"husky": "7.0.4",
		"prettier": "2.4.1",
		"rimraf": "3.0.2",
		"rollup": "2.59.0",
		"rollup-plugin-dts": "4.0.1",
		"sinon": "12.0.1",
		"typescript": "4.4.4"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			},
			"compile": false
		}
	},
	"directories": {
		"example": "example"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/khaos-kit-js.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/khaos-kit-js/issues"
	},
	"homepage": "https://github.com/dev-protocol/khaos-kit-js#readme"
}
