{
	"name": "@devprotocol/khaos-kit",
	"version": "0.0.4",
	"description": "Khaos SDK for JavaScript",
	"main": "index.js",
	"files": [
		"util",
		"client",
		"index.js",
		"index.d.ts",
		"!**/*.test.*"
	],
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"pretest": "yarn build",
		"prebuild": "rimraf *.ts *.js util client",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepack": "yarn test && yarn build"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"bent": "^7.3.12",
		"ramda": "^0.27.1"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@types/bent": "7.3.2",
		"@types/dotenv": "8.2.0",
		"@types/node": "14.14.14",
		"@types/ramda": "0.27.33",
		"@types/sinon": "9.0.9",
		"@typescript-eslint/eslint-plugin": "4.10.0",
		"@typescript-eslint/parser": "4.10.0",
		"ava": "3.14.0",
		"dotenv": "8.2.0",
		"eslint": "7.15.0",
		"eslint-config-prettier": "6.15.0",
		"eslint-plugin-functional": "3.1.0",
		"husky": "4.3.6",
		"prettier": "2.2.1",
		"rimraf": "3.0.2",
		"sinon": "9.2.2",
		"typescript": "4.1.3"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"src/": "/"
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"directories": {
		"example": "example"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/khaos-kit-js.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/khaos-kit-js/issues"
	},
	"homepage": "https://github.com/dev-protocol/khaos-kit-js#readme"
}
